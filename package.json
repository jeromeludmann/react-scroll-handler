{
  "name": "react-scroll-handler",
  "version": "0.1.0",
  "description": "Handle scroll events with React",
  "main": "lib/ScrollHandler.js",
  "types": "lib/ScrollHandler.d.js",
  "scripts": {
    "clean": "rimraf lib/",
    "build": "rollup --config ./rollup.config.js",
    "watch": "npm run build -- -w",
    "dev:infinite-scroll": "EXAMPLE=InfiniteScroll/index.tsx webpack-serve --config ./webpack.config.js",
    "dev:sticked-bar": "EXAMPLE=StickedBar/index.tsx webpack-serve --config ./webpack.config.js"
  },
  "keywords": [
    "react",
    "scroll",
    "events",
    "handler"
  ],
  "author": "Jerome Ludmann <jerome.ludmann@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.1.4",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-typescript2": "^0.13.0",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-serve": "^0.3.1"
  }
}
